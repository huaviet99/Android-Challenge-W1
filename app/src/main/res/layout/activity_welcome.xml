<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_welcome">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mg_32dp"
        android:layout_marginEnd="@dimen/mg_16dp"
        android:background="@drawable/rounded_button"
        android:minWidth="0dp"
        android:fontFamily="@font/sofia_pro_medium"
        android:minHeight="0dp"
        android:text="@string/skip"
        android:textAllCaps="false"
        android:textColor="@color/persimmon"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mg_40dp"
        android:layout_marginTop="@dimen/mg_200dp"
        android:fontFamily="@font/sofia_pro_soft_regular"
        android:text="@string/welcome_to"
        android:textColor="@color/bunker"
        android:textSize="@dimen/size_53sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/sofia_pro_soft_regular"
        android:text="@string/food_hub"
        android:textColor="@color/persimmon"
        android:textSize="@dimen/size_45sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mg_16dp"
        android:fontFamily="@font/sofia_pro_regular"
        android:lines="2"
        android:text="@string/your_favourite_food"
        android:textColor="@color/oxford_blue"
        android:textSize="@dimen/size_18sp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/mg_60dp"
        android:layout_marginBottom="@dimen/mg_20dp"
        android:fontFamily="@font/sofia_pro_regular"
        android:lines="2"
        android:text="Already have an account?"
        android:textColor="@color/white"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mg_8dp"
        android:layout_marginBottom="@dimen/mg_20dp"
        android:fontFamily="@font/sofia_pro_medium"
        android:lines="2"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/mg_40dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/white"
        android:paddingVertical="@dimen/pd_10dp"
        android:text="Start with email or phone"
        android:textAllCaps="false"
        android:textSize="@dimen/size_17sp"
        app:backgroundTint="@color/bg_button_tint"
        android:fontFamily="@font/sofia_pro_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="688dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mg_20dp"
        android:background="@drawable/rounded_button"
        android:paddingHorizontal="@dimen/pd_22dp"
        android:paddingVertical="@dimen/pd_10dp"
        android:text="@string/facebook"
        android:textColor="@color/black"
        android:fontFamily="@font/sofia_pro_medium"
        android:textSize="@dimen/size_13sp"
        app:icon="@drawable/icon_facebook"
        app:iconGravity="textStart"
        app:iconTint="@null"
        app:layout_constraintBottom_toTopOf="@id/button"
        app:layout_constraintStart_toStartOf="@+id/button" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mg_20dp"
        android:background="@drawable/rounded_button"
        android:paddingHorizontal="@dimen/pd_22dp"
        android:paddingVertical="@dimen/pd_10dp"
        android:text="@string/google"
        android:fontFamily="@font/sofia_pro_medium"
        android:textColor="@color/black"
        app:icon="@drawable/icon_google"
        android:textSize="@dimen/size_13sp"
        app:iconGravity="textStart"
        app:iconTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/mg_20dp"
        android:text="Sign in with"
        android:fontFamily="@font/sofia_pro_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/size_14sp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginEnd="@dimen/mg_20dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintEnd_toStartOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/textView11" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/mg_20dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="@+id/textView11" />
</androidx.constraintlayout.widget.ConstraintLayout>